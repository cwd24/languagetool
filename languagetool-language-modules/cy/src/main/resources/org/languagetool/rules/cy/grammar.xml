<rules lang="en" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <category name="Possible Typo" type="misspelling">
        <rule id="Y_FANOD1" name="Y fanod a'r ôl llafariad">
            <pattern>
                <marker>
                    <token>.*[aeiouwy]$</token>
                    <token>yr?</token>
                </marker>
            </pattern>
            <message>Did you mean <suggestion>\1'r</suggestion>?</message>
            <example correction="Mae'r"><marker>Mae y</marker> plant</example>
        </rule>
        <rule id="Y_FANOD2" name="Y fanod cyn llafariad">
            <pattern>
		<or>
                    <token pos="SENT_START"/>
                    <token regex="yes">.*[^aeiouwy]$</token>
		</or>
                <marker>
                    <token>y</token>
                </marker>
                <token>^[aeihouwy].*</token>
            </pattern>
            <message>Did you mean <suggestion>yr</suggestion> \2?</message>
            <example correction="yr">Yn <marker>y</marker> ysgol</example>
        </rule>
        <rule id="Y_FANOD3" name="Y fanod cyn cytsain">
            <pattern>
		<or>
                    <token pos="SENT_START"/>
                    <token regex="yes">.*[^aeiouwy]$</token>
		</or>
                <marker>
                    <token>yr</token>
                </marker>
                <token>^[^aehiouwy].*</token>
            </pattern>
            <message>Did you mean <suggestion>y</suggestion> \2?</message>
            <example correction="y">Yn <marker>yr</marker> pentref</example>
        </rule>
        <rule id="Y_FANOD3" name="Y fanod cyn cytsain">
            <pattern>
                <marker>
                    <token>a</token>
                </marker>
                <token>^[aehiouwy].*</token>
            </pattern>
            <message>Did you mean <suggestion>ac</suggestion> \2?</message>
            <example correction="ac">Afal <marker>a</marker> oren</example>
        </rule>
        <rule id="Y_FANOD3" name="Y fanod cyn cytsain">
            <pattern>
                <marker>
                    <token>ac</token>
                </marker>
                <token>^[^aehiouwy].*</token>
            </pattern>
            <message>Did you mean <suggestion>a</suggestion> \2?</message>
            <example correction="a">Afal <marker>ac</marker> banana</example>
        </rule>
        <rule id="Y_FANOD3" name="Y fanod cyn cytsain">
            <pattern>
                <marker>
                    <token>â</token>
                </marker>
                <token>^[aehiouwy].*</token>
            </pattern>
            <message>Did you mean <suggestion>ag</suggestion> \2?</message>
            <example correction="ag">Afal <marker>â</marker> oren</example>
        </rule>
        <rule id="Y_FANOD3" name="Y fanod cyn cytsain">
            <pattern>
                <marker>
                    <token>ag</token>
                </marker>
                <token>^[^aehiouwy].*</token>
            </pattern>
            <message>Did you mean <suggestion>a</suggestion> \2?</message>
            <example correction="a">Afal <marker>ag</marker> banana</example>
        </rule>
    </category>
</rules>
